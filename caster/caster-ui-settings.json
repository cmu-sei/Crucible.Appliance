{
  "ApiUrl": "https://caster-api.${DOMAIN}",
  "OIDCSettings": {
    "authority": "https://id.${DOMAIN}/",
    "client_id": "caster-ui-dev",
    "redirect_uri": "https://caster.${DOMAIN}/auth-callback/",
    "post_logout_redirect_uri": "https://caster.${DOMAIN}/",
    "response_type": "code",
    "scope": "openid profile email caster-api",
    "automaticSilentRenew": true,
    "silent_redirect_uri": "https://caster.${DOMAIN}/auth-callback-silent/"
  },
  "UseLocalAuthStorage": true,
  "AppTopBarHexColor": "#E9831C",
  "AppTopBarHexTextColor": "#FFFFFF",
  "AppTopBarText": "Caster",
  "Hotkeys": {
    "PROJECT_NEW": {
      "keys": "meta.p",
      "group": "",
      "description": "New Project"
    },
    "ENTER": {
      "keys": "enter",
      "group": "Global",
      "description": "Default 'confirm'",
      "allowIn": ["INPUT"]
    },
    "ESCAPE": {
      "keys": "escape",
      "group": "Global",
      "description": "Default 'cancel'",
      "allowIn": ["INPUT", "TEXTAREA"]
    },
    "FILE_LOCK_TOGGLE": {
      "keys": "control.l",
      "group": "Editor",
      "description": "Unlock / Lock a file",
      "allowIn": ["INPUT", "TEXTAREA"]
    },
    "FILE_SAVE": {
      "keys": "control.s",
      "group": "Editor",
      "description": "Save a file",
      "allowIn": ["INPUT", "TEXTAREA"]
    }
  }
}
